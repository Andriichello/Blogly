<%= render 'custom/posts_navbar' %>
<h1>Create Post</h1>

<%= form_with model: @post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>

    <%= f.label :title %><br>
    <%= f.text_field(:title, {:class => 'form-control'}) %><br>
    <%= f.label :body %><br>
    <%= f.text_area(:body, :size => "100x4", :class => 'form-control') %><br>
    <%= f.hidden_field(:creator, :value => session[:user_id]) %>
    <%= f.submit({:class => 'btn btn-primary'}) %>
    <style>
        #post_body {

        }
    </style>

<% end %>